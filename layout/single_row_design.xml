<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_marginBottom="5dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Name"
                android:textColor="#123456"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#009688"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_Name" />

            <TextView
                android:id="@+id/txt_CNIC"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="CNIC : "
                android:textColor="#4C4C4C"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider">

            </TextView>

            <TextView
                android:id="@+id/txt_CNIC2"
                android:layout_width="48dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Age : "
                android:textColor="#4C4C4C"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_CNIC">

            </TextView>

            <TextView
                android:id="@+id/txt_CNIC3"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Semester : "
                android:textColor="#4C4C4C"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textAGE"
                app:layout_constraintTop_toBottomOf="@+id/textCNIC">

            </TextView>

            <TextView
                android:id="@+id/txt_CNIC4"
                android:layout_width="52dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="CGPA : "
                android:textColor="#4C4C4C"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textCNIC"
                app:layout_constraintTop_toBottomOf="@+id/divider">

            </TextView>

            <TextView
                android:id="@+id/textCNIC"
                android:layout_width="199dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="CNIC"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txt_CNIC"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textAGE"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="AGE"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txt_CNIC2"
                app:layout_constraintTop_toBottomOf="@+id/textCNIC" />

            <TextView
                android:id="@+id/textSemester"
                android:layout_width="132dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Semester"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txt_CNIC3"
                app:layout_constraintTop_toBottomOf="@+id/textCNIC" />

            <TextView
                android:id="@+id/textCGPA"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="CGPA"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txt_CNIC4"
                app:layout_constraintTop_toBottomOf="@+id/divider" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>